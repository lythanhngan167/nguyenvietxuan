<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field name="search" type="text" hint="COM_AGENT_CONTACT_SEARCH_FILTER_SUBMIT"
               label="COM_USERS_FILTER_SEARCH_DESC"
               class="js-stools-search-string" />

        <field name="state"
               type="status"
               label="COM_AGENT_CONTACT_FILTER_STATE"
               description="COM_AGENT_CONTACT_FILTER_STATE_DESC"
               onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>

        

    </fields>

    <fields name="list">

        <field name="fullordering"
               type="list"
               label="COM_CONTENT_LIST_FULL_ORDERING"
               description="COM_CONTENT_LIST_FULL_ORDERING_DESC"
               onchange="this.form.submit();"
               default="a.id DESC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.`id` ASC">ID Ascending</option><option value="a.`id` DESC">ID Descending</option><option value="a.`ordering` ASC">Order Ascending</option><option value="a.`ordering` DESC">Order Descending</option><option value="a.`state` ASC">State Ascending</option><option value="a.`state` DESC">State Descending</option><option value="a.`created_by` ASC">Created by Ascending</option><option value="a.`created_by` DESC">Created by Descending</option><option value="a.`phone` ASC">Phone Ascending</option><option value="a.`phone` DESC">Phone Descending</option><option value="a.`email` ASC">Email Ascending</option><option value="a.`email` DESC">Email Descending</option><option value="a.`address` ASC">Address Ascending</option><option value="a.`address` DESC">Address Descending</option><option value="a.`facebookpage` ASC">Facebook page Ascending</option><option value="a.`facebookpage` DESC">Facebook page Descending</option><option value="a.`youtubepage` ASC">Youtube page Ascending</option><option value="a.`youtubepage` DESC">Youtube page Descending</option>

        </field>

        <field name="limit"
               type="limitbox"
               class="input-mini"
               default="25"
               onchange="this.form.submit();"
        />

    </fields>

</form>