<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field name="search" type="text" hint="COM_AGENT_IMAGES_SEARCH_FILTER_SUBMIT"
               label="COM_USERS_FILTER_SEARCH_DESC"
               class="js-stools-search-string" />

        <field name="state"
               type="status"
               label="COM_AGENT_IMAGES_FILTER_STATE"
               description="COM_AGENT_IMAGES_FILTER_STATE_DESC"
               onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>

        

    </fields>

    <fields name="list">

        <field name="fullordering"
               type="list"
               label="COM_CONTENT_LIST_FULL_ORDERING"
               description="COM_CONTENT_LIST_FULL_ORDERING_DESC"
               onchange="this.form.submit();"
               default="a.id DESC"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="a.`id` ASC">ID Ascending</option><option value="a.`id` DESC">ID Descending</option><option value="a.`ordering` ASC">Order Ascending</option><option value="a.`ordering` DESC">Order Descending</option><option value="a.`state` ASC">State Ascending</option><option value="a.`state` DESC">State Descending</option><option value="a.`created_by` ASC">Created by Ascending</option><option value="a.`created_by` DESC">Created by Descending</option><option value="a.`image1` ASC">Image1 Ascending</option><option value="a.`image1` DESC">Image1 Descending</option><option value="a.`image2` ASC">Image2 Ascending</option><option value="a.`image2` DESC">Image2 Descending</option><option value="a.`image3` ASC">Image3 Ascending</option><option value="a.`image3` DESC">Image3 Descending</option><option value="a.`image4` ASC">Image4 Ascending</option><option value="a.`image4` DESC">Image4 Descending</option><option value="a.`image5` ASC">Image5 Ascending</option><option value="a.`image5` DESC">Image5 Descending</option>

        </field>

        <field name="limit"
               type="limitbox"
               class="input-mini"
               default="25"
               onchange="this.form.submit();"
        />

    </fields>

</form>