<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="fieldgroup">
		<field 
			name="id"  
			type="hidden" 
			default="0"/>
			
		<field 
			name="title"  
			type="text" 
			required="true"
			label="COM_JOOMPROFILE_TITLE"
			description ="COM_JOOMPROFILE_FIELDGROUP_TITLE_DESC" 
			default=""/>
			
		<field 
			name="description"  
			type="textarea"
			class=" input-large"
			label="COM_JOOMPROFILE_DESCRIPTION"
			description ="COM_JOOMPROFILE_FIELDGROUP_DESCRIPTION_DESC" 
			default=""/>
			
		<field 
			name="ordering"  
			type="hidden" 
			default="0"/>
			
		<field  
			name="published"  
			type="radio"
			class="btn-group"
			label="COM_JOOMPROFILE_PUBLISHED"
			description ="COM_JOOMPROFILE_FIELDGROUP_PUBLISHED_DESC" 
			default="1">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>

		<field  
			name="registration"  
			type="radio"
			class="btn-group"
			label="COM_JOOMPROFILE_REGISTRATION"
			description ="COM_JOOMPROFILE_FIELDGROUP_REGISTRATION_DESC" 
			default="1">
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>	

		<field 
			name="jusergroups"  
			type="usergroup"
			multiple="true"
			class="chosen"
			size="10"
			label="COM_JOOMPROFILE_USERGROUPS"
			description ="COM_JOOMPROFILE_FIELDGROUP_JUSERGROUPS_DESC" 
			default=""/>
			
		<fields name="params">
			<fieldset name="fieldgroup_params">
				<field 
					name="icon_class"  
					type="text" 
					label="COM_JOOMPROFILE_ICON_CLASS"
					description ="COM_JOOMPROFILE_FIELDGROUP_PARAMS_ICON_CLASS_DESC" 
					default="fa fa-columns"/>
			</fieldset>
		</fields>
	</fieldset>	
</form>